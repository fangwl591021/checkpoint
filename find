<body>
  <h1>ğŸ‰ ä¸­çç´€éŒ„æŸ¥è©¢</h1>
  <button id="btnQuery">æŸ¥è©¢æˆ‘çš„ç´€éŒ„</button>
  <div id="output"></div>

  <script>
    // æ›¿æ›ç‚ºä½ çš„åŸ·è¡Œç¶²å€
    const WEBAPP_URL = 'https://script.google.com/macros/s/ä½ çš„ID/exec';
    const LIFF_ID    = '1656871455-EdjZZqag';

    // åˆå§‹åŒ– LIFF
    liff.init({ liffId: LIFF_ID })
      .then(() => {
        if (!liff.isLoggedIn()) liff.login();
      })
      .catch(err => alert('LIFF åˆå§‹åŒ–å¤±æ•—ï¼š'+err.message));

    document.getElementById('btnQuery').onclick = () => {
      liff.getProfile()
        .then(profile => fetchRecords(profile.userId))
        .catch(err => alert('å–å¾—è³‡æ–™å¤±æ•—ï¼š'+err.message));
    };

    function fetchRecords(userId) {
      const out = document.getElementById('output');
      out.innerHTML = 'è¼‰å…¥ä¸­â€¦';
      fetch(WEBAPP_URL, {
        method: 'POST',
        headers: { 'Content-Type':'application/json' },
        body: JSON.stringify({ action:'searchRecords', userId })
      })
      .then(r => r.json())
      .then(json => {
        if (!json.success) throw new Error(json.message);
        out.innerHTML = json.records.length
          ? json.records.map(r=>`
              <div class="card">
                <strong>${r.gameName}</strong><br>
                ä½¿ç”¨è€…ï¼š${r.inename||r.userId}<br>
                ä¸­çæ™‚é–“ï¼š${r.winTime}<br>
                ${r.isVerified
                  ? `âœ“ å·²æ ¸éŠ·ï¼š${r.verifyTime}`
                  : `<button onclick="verify('${r.userId}','${r.gameName}','${r.winTime}')">æ ¸éŠ·æ­¤ç­†</button>`}
              </div>`).join('')
          : 'ğŸ” æŸ¥ç„¡ç´€éŒ„';
      })
      .catch(err => out.innerHTML = 'éŒ¯èª¤ï¼š'+err.message);
    }

    function verify(lineId, gameName, winTime) {
      const out = document.getElementById('output');
      out.innerHTML = 'æ ¸éŠ·ä¸­â€¦';
      const now = new Date();
      const ts = now.getFullYear()+'-'+(now.getMonth()+1).toString().padStart(2,'0')+'-'+
                 now.getDate().toString().padStart(2,'0')+' '+now.getHours().toString().padStart(2,'0')+':' +
                 now.getMinutes().toString().padStart(2,'0')+':'+now.getSeconds().toString().padStart(2,'0');
      fetch(WEBAPP_URL, {
        method: 'POST',
        headers: { 'Content-Type':'application/json' },
        body: JSON.stringify({
          action:'verifyRecord',
          lineId, gameName, winTime, currentVerifyTime:ts
        })
      })
      .then(r=>r.json())
      .then(json=>{
        if (!json.success) throw new Error(json.message);
        alert('æ ¸éŠ·æˆåŠŸ');
        document.getElementById('btnQuery').click();
      })
      .catch(err=>alert('æ ¸éŠ·å¤±æ•—ï¼š'+err.message));
    }
  </script>
